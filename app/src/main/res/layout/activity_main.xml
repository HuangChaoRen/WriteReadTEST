<ScrollView    
    xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:tools="http://schemas.android.com/tools"  
    android:layout_width="fill_parent"    
    android:layout_height="fill_parent"    
    android:scrollbars="vertical"    
    android:fadingEdge="vertical">

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/root_layout"
    android:clickable="true"
    tools:context=".MainActivity" >

<!--     <TextView -->
<!--         android:layout_width="wrap_content" -->
<!--         android:layout_height="wrap_content" -->
<!--         android:layout_marginTop="0dp" -->
<!--         android:layout_marginLeft="00dp" -->
<!--         android:textSize="13dp" -->
<!--         android:text="读写测试程序" /> -->
   
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="110dp"
        android:textSize="13dp"
        android:text="日志路径：" />
    <Button 
        android:id="@+id/btn_file_sel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:textSize="13dp"
        android:text="选择存储路径" />
    <TextView 
        android:id="@+id/tv_save_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="195dp"
        android:textSize="13dp"
        android:text="/storage/sdcard0/TEST_WRITE_READ_USER_LOG.txt" />
    
    <!-- 黑线 -->
    <View 											
        android:layout_height="1px" 
        android:background="@color/color_black" 
        android:layout_width="fill_parent"
        android:layout_marginTop="50dp"
         ></View>
    <View 										
        android:layout_height="1px" 
        android:background="@color/color_black" 
        android:layout_width="fill_parent"
        android:layout_marginTop="200dp"
         ></View>
    
   
    <Button 
        android:id="@+id/btn_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="0dp"
        android:textSize="13dp"
        android:text="开始写用户数据区" />
    
    <EditText 
        android:id="@+id/et_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="130dp"
        android:textSize="13dp"
        android:numeric="integer"
        android:maxLength="18"
        android:hint="写入次数" />
    
    
    <Button 
        android:id="@+id/btn_out_sel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="0dp"
        android:textSize="13dp"
        android:text="选择数据文件" />
    
    <TextView 
        android:id="@+id/tv_out_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="110dp"
        android:textSize="13dp"
        android:hint="" />
    
    <EditText 
        android:id="@+id/et_count_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="300dp"
        android:textSize="13dp"
        android:numeric="integer"
        android:maxLength="18"
        android:hint="写入次数" />
    
    <Button 
        android:id="@+id/btn_write_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="380dp"
        android:textSize="13dp"
        android:text="开始写入" />
     <Button 
        android:id="@+id/btn_delete_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="300dp"
        android:textSize="13dp"
        android:text="删除用户区测试数据" />
    
    
     <TextView 
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="0dp"
        android:textSize="13dp"
        android:text="点击开始" />
    
    <Button 
        android:id="@+id/btn_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="0dp"
        android:textSize="13dp"
        android:text="开始写程序区" />
    
    <TextView 
        android:id="@+id/tv_result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="10dp"
        android:textSize="13dp"
        android:text="点击开始" />

    <CheckBox
        android:id="@+id/cb_auto_write_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="120dp"
        android:checked="false"
        android:textSize="13dp"
        android:text="自动执行" />
    
    <Chronometer  
		android:id ="@+id/timer"  
		android:layout_width="wrap_content"  
		android:layout_height="wrap_content"  
		android:format="%s"  
		android:textSize="13sp"  
		android:layout_marginTop="240dp"
        android:layout_marginLeft="215dp" />
    

</RelativeLayout>

</ScrollView>